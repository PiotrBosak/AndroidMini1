<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".EditShoppingListActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_list_name"
            android:text="Shopping List App"
        ></TextView>


    <EditText
            android:id="@+id/edit_list_new_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="new list name"
            android:inputType="textPersonName"
            />

    <Button
            android:id="@+id/modifyProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify list"
            app:layout_constraintStart_toStartOf="parent"
            />

    <Button
            android:id="@+id/deleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete list"
            app:layout_constraintStart_toStartOf="parent"
            />

</LinearLayout>
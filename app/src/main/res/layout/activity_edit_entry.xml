<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
    android:orientation="vertical">


    <TextView
            android:id="@+id/edit_entry_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping List App"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/edit_entry_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping List App"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/edit_entry_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping List App"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <EditText
            android:id="@+id/edit_entry_new_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="new product name"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/edit_entry_new_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="new product quantity" />

    <EditText
            android:id="@+id/edit_entry_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="new price"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_is_completed"
            android:text="Is completed" />

    <Button
            android:id="@+id/modifyProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify product"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/deleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete product"
            app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>